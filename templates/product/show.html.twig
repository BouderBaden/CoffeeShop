{% extends 'base.html.twig' %}

{% block title %}Admin | Contact{% endblock %}

{% block body %}
    <div class="relative overflow-x-auto flex justify-center items-center mt-2">
        <table class="w-[80%] text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Nom
                </th>
                <th scope="col" class="px-6 py-3">
                    Description
                </th>
                <th scope="col" class="px-6 py-3">
                    Prix
                </th>
                <th scope="col" class="px-6 py-3">
                    Note
                </th>
                <th scope="col" class="px-6 py-3">
                    Familles
                </th>
                <th scope="col" class="px-6 py-3">
                    Pays
                </th>
                <th scope="col" class="px-6 py-3">
                    Best Seller ?
                </th>
                <th scope="col" class="px-6 py-3">
                    Catégorie
                </th>
                <th scope="col" class="px-6 py-3">
                    Marque
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ product.name }}
                    </th>
                    <td class="px-6 py-4">
                        {{ product.description }}
                    </td>
                    <td class="px-6 py-4">
                        {{ product.price }}
                    </td>
                    <td class="px-6 py-4">
                        {{ product.note }}
                    </td>
                    <td class="px-6 py-4">
                        {{ product.family }}
                    </td>
                    <td class="px-6 py-4">
                        {{ product.country }}
                    </td>
                    <td class="px-6 py-4">
                        {{ product.bestSeller }}
                    </td>
                    <td class="px-6 py-4">
                        {% if product.category %}
                            {{ product.category.name }}
                        {% else %}
                            Pas de catégorie définie
                        {% endif %}

                    </td>
                    <td class="px-6 py-4">
                        {% if product.brand %}
                            {{ product.brand.name }}
                        {% else %}
                            Pas de Marques définie
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-center flex">
                        <a href="{{ path('products_delete', {'id': product.id}) }}" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Supprimer</a>
                        <a href="{{ path('products_update', {'id': product.id}) }}" class="focus:outline-none text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="navigation flex justify-center mb-8">{{ knp_pagination_render(products) }}</div>

{% endblock %}